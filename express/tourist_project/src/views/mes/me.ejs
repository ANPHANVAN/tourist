<div class="container-fluid p-0">
    <!-- Ảnh bìa -->
    <div class="position-relative">
      <img src="https://upload.wikimedia.org/wikipedia/en/8/86/Avatar_Aang.png" 
           alt="Cover Photo" 
           class="img-fluid w-100" 
           style="height: 300px; object-fit: cover;">
      <!-- Ảnh đại diện -->
      <div class="position-absolute" style="bottom: -50px; left: 20px;">
        <img src="https://upload.wikimedia.org/wikipedia/en/8/86/Avatar_Aang.png" 
             alt="Profile Picture" 
             class="rounded-circle border border-white" 
             style="width: 150px; height: 150px; object-fit: cover;">
      </div>
    </div>
  
    <!-- Thông tin cá nhân -->
    <div class="container mt-5 pt-4">
      <div class="row">
        <div class="col-md-4">
          <h2 class="mb-2"><%= 'Unknown User' %></h2>
          <p class="text-muted mb-3"><%= 'No bio available.' %></p>
          <a href="/me/edit/" class="btn btn-primary mb-3">Edit Profile</a>
        </div>
        <div class="col-md-8">
          <!-- Form đăng bài -->
          <div class="card mb-4">
            <div class="card-body">
              <form action="/posts" method="POST" enctype="multipart/form-data">
                <textarea name="content" 
                          class="form-control mb-2" 
                          rows="3" 
                          placeholder="Share your travel story..." 
                          required></textarea>
                <input type="file" name="images" class="form-control mb-2" accept="image/*" multiple>
                <button type="submit" class="btn btn-success w-100">Post</button>
              </form>
            </div>
          </div>
  
        </div>
      </div>
    </div>
  </div>
  
  <style>
    /* Tùy chỉnh giao diện */
    .card-body {
      padding: 1.5rem;
    }
    textarea:focus, input:focus {
      box-shadow: 0 0 10px rgba(0, 123, 255, 0.2);
      border-color: #007bff;
    }
  </style>

