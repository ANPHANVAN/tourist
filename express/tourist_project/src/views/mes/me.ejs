<div class="container-fluid p-0">
  <!-- Ảnh bìa -->
  <div class="position-relative">
    <img src="https://upload.wikimedia.org/wikipedia/en/8/86/Avatar_Aang.png" 
          alt="Cover Photo" 
          class="img-fluid w-100" 
          style="height: 300px; object-fit: cover;">
    <!-- Ảnh đại diện -->
    <div class="position-absolute" style="bottom: -50px; left: 20px;">
      <img src="https://upload.wikimedia.org/wikipedia/en/8/86/Avatar_Aang.png" 
            alt="Profile Picture" 
            class="rounded-circle border border-white" 
            style="width: 150px; height: 150px; object-fit: cover;">
    </div>
  </div>
  
  <!-- Thông tin cá nhân -->
  <div class="container mt-5 pt-4">
    <div class="row">
      <div class="col-md-4">
        <h2 class="mb-2"><%= user.fullname %></h2>
        <p class="text-muted mb-3"><%= 'No bio available.' %></p>
        <a href="/me/edit/" class="btn btn-primary mb-3">Edit Profile</a>
      </div>
      <div class="col-md-8">
        <!-- Form đăng bài -->
        <div class="card mb-4">
          <div class="card-body">
            <!-- enctype="multipart/form-data" --> 
            <form action="/me/posts" method="POST">
              <textarea name="content" 
                        class="form-control mb-2" 
                        rows="3" 
                        placeholder="Share your travel story..." 
                        required></textarea>
              <!-- <inp ut type="text" name="location" class="form-control mb-2" placeholder="Location" required> -->
              <!-- <select class="form-select" id="location" name="location" required>
                <option value="" disabled selected>-- Choose a location --</option>
                <option value="hanoi">Hà Nội</option>
                <option value="hochiminh">Hồ Chí Minh</option>
              </select> -->
              <!-- <input type="file" name="images" class="form-control mb-2" accept="image/*" multiple> -->
              <button type="submit" class="btn btn-success w-100">Post</button>
            </form>

          </div>
        </div>
  
          <!-- Danh sách bài đăng -->
        <div class="container mt-5">
          <h2 class="text-center mb-5 fw-bold text-primary">My Travel Posts</h2>
      
          <!-- Danh sách bài đăng -->
          <div class="row justify-content-center">
            <div class="col-md-8" id="postsContainer">
              <!-- Bài đăng sẽ được render động ở đây -->
            </div>
          </div>
        </div>
        <script>
          // Gọi hàm fetchPosts khi trang được tải
          document.addEventListener('DOMContentLoaded', ()=> fetchPosts('<%= user._id %>'));
        </script>
      </div>
    </div>
  </div>
</div>
  
  <style>
    /* Tùy chỉnh giao diện */
    .card-body {
      padding: 1.5rem;
    }
    textarea:focus, input:focus {
      box-shadow: 0 0 10px rgba(0, 123, 255, 0.2);
      border-color: #007bff;
    }
  </style>
